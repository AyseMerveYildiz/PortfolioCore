@model Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Hizmet Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" class="form-control" asp-for="ServiceId" />
    <label>Hizmet Türü</label>
    <input type="text" class="form-control" asp-for="Title"/>
    <br /> <label>İkon</label>
    <input type="text" class="form-control" asp-for="Icon"  />
    <br />
    <label>Açıklama</label>
    <input type="text" class="form-control" asp-for="Description" />
    <br />
    <button class="btn btn-success">Hizmet Bilgisini Güncelle</button>
</form>