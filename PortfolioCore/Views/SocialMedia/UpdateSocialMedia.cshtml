@model SocialMedia
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Sosyal Medya Hesabı Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" class="form-control" asp-for="SocialMediaId" />
    <label>Sosyal Medya Adı</label>
    <input type="text" asp-for="Title" class="form-control">
    <br />
    <label>İkonu</label>
    <input type="text" asp-for="Icon" class="form-control">
    <br />
    <label>Bağlantı Adresi</label>
    <input type="text" asp-for="Url" class="form-control">
    <br />
    <button class="btn btn-success">Hesap Güncelle</button>
</form>