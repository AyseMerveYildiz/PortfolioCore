@model About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Hakkımda Güncelleme Sayfası</h1>


<form method="post">
    <input type="hidden" asp-for="AboutId" />
    <label>Başlık</label>
    <input type="text" class="form-control" asp-for="Title" />
    <br />
    <label>Açıklama</label>
    <input type="text" class="form-control" asp-for="Description" />
    <br />
    <label>Görsel</label>
    <input type="text" class="form-control" asp-for="ImageUrl" />
    <br />
    <label>Yaş</label>
    <input type="text" class="form-control" asp-for="Age" />
    <br />
    <label>Mail Adresi</label>
    <input type="text" class="form-control" asp-for="Email" />
    <br />
    <label>Telefon Numarası</label>
    <input type="text" class="form-control" asp-for="Phone" />
    <br />
    <label>Şehir</label>
    <input type="text" class="form-control" asp-for="City" />
    <br />
    <label>Açıklama 2</label>
    <input type="text" class="form-control" asp-for="SubDescription" />
    <br />
    <button class="btn btn-info">Ekle</button>
</form>